{erl_opts, [
    debug_info,
    {parse_transform, lager_transform},
    {lager_truncation_size, 10485760},
    {i, "include"}
    ]}.

{deps, [
    {lager, {git, "https://github.com/basho/lager.git", {tag, "2.1.1"}}}
]}.

{plugins, [
  {rebar3_diameter_compiler, {git, "https://github.com/carlosedp/rebar3_diameter_compiler.git", {branch, "master"}}}
]}.

{provider_hooks,
 [
  {pre,
   [
    {compile, {diameter, compile}},
    {clean, {diameter, clean}}
   ]
  }
 ]
}.

{relx, [{release, {'dccaserver', "0.1.0"}, [
            lager,
            sasl,
            diameter,
            ocsgateway,
            dccaserver
        ]},

        {sys_config, "./config/sys.config"},
        {vm_args, "./config/vm.args"},

        {dev_mode, true},
        {include_erts, false},

        {extended_start_script, true}]
}.

{profiles, [{prod, [{relx, [{dev_mode, false},
                            {include_erts, true}]}]
            }]
}.
